{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@src/*": ["./.src/*"],
      "@dist/*": ["./.dist/*"],
      "@libs/*": ["./libs/*"]
    }
  },
  "include": ["**/*.ts", "**/*.mts"],
  "exclude": ["node_modules"]
}
